<div class="container-fluid">
	<div class="col-md-3">
	</div>
	<div class="col-md-6 bg-info">
	<h1>Welcome to the giftagram</h1>

	<strong>Sort Your Posts</strong>
		<button class="btn btn-danger btn-xs">
			<%= link_to("Sort above 5", controller: "posts", command: "five")%>
		</button>
		<button class="btn btn-danger btn-xs">
			<%= link_to("Sort by Creation", controller: "posts", command: "creation")%>
		</button>
		<button class="btn btn-danger btn btn-xs">
			<%= link_to("Sort by Vote", controller: "posts", command: "vote")%>
		</button><br/><br/>
		<strong>or create yours here -></strong>

		<button class="btn btn-danger btn-xs">
			<%= link_to("Create Post", new_post_path) %>
		</button><br/><br/>
		Sort Posts by Label:<br/>
		<!-- SORT -->
		<button class="btn btn-danger btn-xs">
			<%= link_to("Funny", controller: "posts", command: "funny" ) %>
		</button>
		<button class="btn btn-danger btn-xs">
			<%= link_to("Sad", controller: "posts", command: "sad" ) %>
		</button>
		<button class="btn btn-danger btn-xs">
			<%= link_to("NSFW", controller: "posts", command: "nsfw" ) %>
		</button>
		<button class="btn btn-danger btn-xs">
			<%= link_to("Histerical", controller: "posts", command: "histerical" ) %>
		</button>
		<button class="btn btn-danger btn-xs">
			<%= link_to("Trum", controller: "posts", command: "trump" ) %>
		</button>
		<button class="btn btn-danger btn-xs">
			<%= link_to("Happy", controller: "posts", command: "happy" ) %>
		</button>
		
		<% @posts.each do |post| %>
			<h3><%= post.title %></h3>
			<%= image_tag(post.gif_url) %><br/>
			Votes: <%= post.votes %>
		<div>
		<%= link_to "See More", post_path(post) %>
		</div>
		<hr class="bg-primary">
		 <% end %>
	 </div>
	 <div>
	 <div class="col-md-3">
	 </div>
</div>