<%= form_for  [@user, @product] do |f| %>
		<%= f.label :title %>
		<%= f.text_field :title %>
		<br>
		<%= f.label :description %>
		<%= f.text_field :description%>
		<br>
		<%= f.label :minimum_bid  %>
		<%= f.number_field :minimum_bid, :step => 'any' %>
		<br>
		<%= f.label :deadline %>
		<%= f.date_field :deadline %>
		<%= f.submit %>
<% end %>